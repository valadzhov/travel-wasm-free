@page "/home/set_new_password"
@inject NavigationManager NavigationManager

<div class="row-layout set-new-password-container">
    <div class="row-layout left">
        <div class="column-layout group">
            <img src="assets/Travel-App-Color-Logo.svg" class="image" />
            <div class="column-layout group_1">
                <div class="column-layout group_2">
                    <h5 class="h5">
                        Set new password
                    </h5>
                    <p class="typography__body-2 text">
                        Please, type your new password and click confirm.
                    </p>
                </div>
                <div class="column-layout group_1">
                    <IgbInput DisplayType="InputType.Password" Label="Password" Placeholder="Min 8 characters" Outlined="false" class="input" set_new_password-scope></IgbInput>
                    <IgbInput DisplayType="InputType.Password" Label="Repeat Password" Placeholder="Min 8 characters" Outlined="false" class="input" set_new_password-scope></IgbInput>
                </div>
            </div>
            <IgbButton DisplayType="ButtonBaseType.Button" @onclick="@(e => Navigate("/home/login"))" class="button" set_new_password-scope>
                confirm new password
                <IgbRipple></IgbRipple>
            </IgbButton>
        </div>
    </div>
    <div class="row-layout right">
        <img src="assets/NewPassword.jpg" class="image_1" />
    </div>
</div>

@code {

    public void Navigate(string path)
    {
        NavigationManager.NavigateTo(path);
    }
}
